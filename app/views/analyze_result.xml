<Alloy>
	<Window class="win">
		<View class="page">
		
			<ScrollableView class="scroller" onScrollend="onScrollend" onScroll="onScroll">
				<!-- view 1 -->
				<View>
					<View class="wrapper">
						<Label id="lblName" class="h2 center">Amelia</Label>
						<View class="row">
							<Label class="h2 label">Age:</Label>
							<Label id="lblAge" class="h2 value">24</Label>
						</View>
						<View class="row">
							<Label class="h2 label">Sex:</Label>
							<Label id="lblGender" class="h2 value">Female</Label>
						</View>
						<Label class="h3 margin center">*All info gathered from Facebook, \n if inaccurate, please update on Facebook.</Label>
					</View>
				</View>
				
				<!-- view 2 -->
				<Require id="preferenceWhen" src="elements/match_preference/when"/>
				
				<!-- view 3 -->
				<Require id="preferenceWho" src="elements/match_preference/who"/>
			</ScrollableView>
		
			<View id="lblContinue" onClick="updateUser">
				<Label class="h3-bold label-continue">To Be Continued...</Label>
				<Label class="h3-bold label-continue-2">V</Label>
			</View>
			
			<View id="sliderContainer">
				<Require id="ageSlider" src="elements/slider"/>
			</View>
			
			<!-- time picker -->
			<Require id="timePicker" src="elements/time_picker"/>
			
			<!-- value picker -->
			<Require id="valuePicker" src="elements/value_picker"/>
		
		</View>
	</Window>	
</Alloy>