<Alloy>
	<Window class="win">
		<View class="page">
		
			<ScrollableView class="scroller" onScrollend="onScrollend">
				<!-- view 1 -->
				<View>
					<View class="wrapper">
						<Label id="lbName" class="h2 center">Amelia</Label>
						<View class="row">
							<Label class="h2 label">Age:</Label>
							<Label id="lbAge" class="h2 value">24</Label>
						</View>
						<View class="row">
							<Label class="h2 label">Sex:</Label>
							<Label id="lbGender" class="h2 value">Female</Label>
						</View>
						<Label class="h3 margin center">*All info gathered from Facebook, \n if inaccurate, please update on Facebook.</Label>
					</View>
				</View>
				
				<!-- view 2 -->
				<View>
					<View class="wrapper">
						<Label class="h2 center">When are you typically busy?</Label>
						
						<Label class="h2 label margin label-time">Weekdays</Label>
						<View class="row row-time">
							<View class="toggle" onClick="togglePrefix">
								<Label id='lbBusyText' class="h2 toggle-label">Before:</Label>
								<ImageView class="toggle-arrow"/>
							</View>
							<Label id='lbBusyValue' class="h2-bold value toggle-value" onClick="showTimePicker">6:59AM</Label>
						</View>
						
						<Label class="h2 label margin label-time">Weekends</Label>
						<View class="row row-time">
							<View class="toggle" onClick="togglePrefix">
								<Label id='lbWeekendsText' class="h2 toggle-label">After:</Label>
								<ImageView class="toggle-arrow"/>
							</View>
							<Label id='lbWeekendsValue' class="h2-bold value toggle-value" onClick="showTimePicker">10:59PM</Label>
						</View>
					</View>
					
					<Label class="h3 intro">..................................................................................... \n *MeetCute will not send notifications when you are typically busy, nor any later than 10:59PM and no earlier than 6:59AM local time.</Label>
				</View>
				
				<!-- view 3 -->
				<View>
					<View class="wrapper">
						<Label class="h2 center">Who would you like to \ncross paths with?</Label>
						<View class="row margin">
							<Label class="h2 label">Sex:</Label>
							<View class="toggle toggle-h" onClick="toggleSex">
								<Label id='lbTargetGender' class="h2-bold value toggle-label-h">Anyone</Label>
								<ImageView class="toggle-arrow-h"/>
							</View>
						</View>
						<View class="row">
							<Label class="h3 label">Age range:</Label>
							<Label class="h3 value" onClick="showAgePicker" id="ageFrom">20</Label>
							<Label class="h3 value age-value"> - </Label>
							<Label class="h3 value age-value" onClick="showAgePicker" id="ageTo">25</Label>
						</View>
						
						<!--
						http://developer.appcelerator.com/question/154984/range-seekbar
						https://github.com/Larpon/RangeSeekBar
						https://code.google.com/p/range-seek-bar/	
						-->
						<Slider id="ageSlider" class="slider" onChange="setAge"/>
					</View>
				</View>
			</ScrollableView>
		
			<View id="lblContinue" onClick="updateAccount">
				<Label class="h3-bold label-continue">To Be Continued...</Label>
				<Label class="h3-bold label-continue-2">V</Label>
			</View>
		
		</View>
		
		<!-- time picker -->
		<Require id="timePicker" src="elements/time_picker"/>
		
		<!-- value picker -->
		<Require id="valuePicker" src="elements/value_picker"/>
		
	</Window>	
</Alloy>