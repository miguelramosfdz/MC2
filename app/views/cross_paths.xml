<Alloy>
	<View class="page">
		<Widget id="nav" src="navigation_group"/>
		<View class="body">
			
			<View class="wrapper">
				<Label class="intro">· Pick a place · Go \n& MeetCute will let your matches know \n where they can cross paths with you.</Label>
			
				<View class="row first-row">
					<Label class="label">Place:</Label>
					<Label id="lblPlace" class="value" onClick="showPlaceSearch">_____________</Label>
				</View>
				
				<View class="row">
					<Label class="label">Time:</Label>
					<Label id="lblTime" class="value" onClick="showTimePicker">1:25AM</Label>
				</View>
				
				<View class="button button-view-map" onClick="showMap">
					<Label class="button-label map-link">more info</Label>
					<ImageView class="button-icon icon-map"/>
				</View>
			</View>
			
			<View class="button button-surprise-me" onClick="surpriseMe">
				<ImageView class="button-icon icon-update"/>
				<Label class="button-label">Surprise me</Label>
			</View>
			
			<View id="btnIWillBeThere" class="button button-ok" onClick="clickOnIWillBeThere">
				<ImageView class="button-icon icon-ok"/>
				<Label class="button-label">I'll be there</Label>
			</View>
			
			
			<View class="divider">
				<Label class="dot">.</Label>
				<Label class="dot">.</Label>
				<Label class="dot">.</Label>
				<Label class="dot">.</Label>
				<Label class="dot">.</Label>
				<Label class="dot">.</Label>
			</View>
			
			<!-- time picker -->
			<Require id="timePicker" src="elements/time_picker"/>
			
		</View>
	</View>
</Alloy>